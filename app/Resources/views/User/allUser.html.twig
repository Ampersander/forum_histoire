{% extends 'base.html.twig' %}
{% trans_default_domain 'YosimitsoWorkingForumBundle' %}
{% block title %}liste compte{% endblock %}
{% block body %}

        {% for msg in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>
        {% endfor %}

<div class="d-flex flex-column " style="height: 200px;">
  <div class=" p-2"><h2 class="title_clear d-flex justify-content-center">Liste des User</h2></div>
    <div class='d-flex flex-wrap justify-content-center'>
            {% for  user in listeUser %}
                <div class="card mr-5" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('/image/avatar/default.png')  }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.username }}</h5>
                    <p>

                        Nom :  <strong><a class="user_link" href="{{ path('show_prof', { 'id': user.id }) }}">{{ user.username }}</a></strong> <br/>
                        Email : {{ user.email }} <br/>

                    </p>
                        <a href="{{ path('show_prof', { 'id': user.id }) }}" class="btn btn-primary">Show profil</a>
                        <a href="{{ path('delete_user', { 'id': user.id }) }}" class="btn btn-danger">Delete profil</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        </div>
    </div>
{% endblock %}

