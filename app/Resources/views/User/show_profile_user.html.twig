{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %} Profil de {{ user.username }}{% endblock %}
{% block body %}

<div class="card">
  <div class="card-header">
    <h2 class="titre_principal d-flex justify-content-center">Profil de {{ user.username }}</h2>
  </div>
  <div class="card-body">
    <div class="d-flex flex-column">
    <div id="content">
        <div class="fos_user_user_show">

            {% if user.imageName is not empty %}
                <p><img id="photo_profil" src="{{ asset('/images/Avatar/'~user.imageName) }}" alt="photo de profil" width="100"/></p>
            {% else %}
                <p><img id="photo_profil" src="{{ asset('/image/avatar/default.png') }}" alt="photo de profil" width="100"/></p>   
            {% endif %}

            <p><strong>{{ 'profile.show.username'|trans }} :</strong> {{ user.username }}</p>
            <p><strong>{{ 'profile.show.email'|trans }} :</strong> {{ user.email }}</p>
           

            {% if user.nbPost is not empty %}
                <p><strong>Nombre de Posts :</strong> {{ user.nbPost }}</p>
            {% else %}
                <p><strong>Nombre de Posts :</strong> L'utilisateur n'a pas encore Ã©crit de post.</p>
            {% endif %}

 </div>
        </div>
    </div>
  </div>
</div>


{% endblock %}